{
  "include": [
    "./src/*.ts",
    "./*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "downlevelIteration": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist"
  }
}
